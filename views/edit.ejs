

<%- include('partials/navbaredit.ejs') %>

    <h2 id="title">Edit <%=  title %></h2>
    <form class="ui form" action="/blog/<%= id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" id="title" name= <% title %> value="<%= title %>">
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" id="author" name= <% author %> value="<%= author %>">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name= <% body %>><%= body %></textarea>
        </div>
        <input class="ui violet basic button" id="submitbutton" type="submit">
    </form>
